{
  "manifest_version": 3,
  "name": "My extension",
  "version": "1.0.0",
  "icons": {
    "32": "/icon.png"
  },
  "background": {
    "service_worker": "/service-worker.js",
    "type": "module"
  },
  "action": { 
    "default_popup": "/index.html"
  },
  "permissions": [
    "scripting"
  ],
  "host_permissions": [
    "http://*/*",
    "https://*/*"
  ]
}
